{
  "name": "dtr-manager",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "adr": "node --use-strict ./scripts/architecture-decision-record.js",
    "dev": "DEBUG=dtr:* nodemon --inspect --use_strict -r ./bin/env ./src/server.js",
    "knex": "npx knex --knexfile ./knexfile.js",
    "markdown": "node --use-strict ./scripts/markdown.js",
    "readme": "npm run markdown docs/templates/README.md README.md",
    "repl": "node --inspect --use-strict",
    "start": "pm2 start ./src/server.js --name dtr-manager"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Canary-PrintDesign/dtr-manager.git"
  },
  "author": "",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/Canary-PrintDesign/dtr-manager/issues"
  },
  "homepage": "https://github.com/Canary-PrintDesign/dtr-manager#readme",
  "dependencies": {
    "date-fns": "^2.16.1",
    "dotenv": "^10.0.0",
    "dotenv-expand": "^5.1.0",
    "env-schema": "^3.3.0",
    "express": "^4.17.1",
    "fluent-json-schema": "^3.0.1",
    "joi": "^17.2.1",
    "knex": "^0.21.5",
    "lodash.groupby": "^4.6.0",
    "pg": "^8.3.3",
    "pm2": "^4.5.0",
    "pug": "^3.0.0"
  },
  "devDependencies": {
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "nodemon": "^2.0.4"
  },
  "adr": {
    "path": "./docs/architecture_decision_records",
    "template": "./docs/templates/architecture-decision-record.md"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "commonjs": true,
      "es2021": true,
      "node": true
    },
    "extends": [
      "standard"
    ],
    "parserOptions": {
      "ecmaVersion": 12
    },
    "rules": {
      "comma-dangle": false
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
